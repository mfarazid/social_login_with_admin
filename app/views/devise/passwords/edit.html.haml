.row.well
  .col-lg-6
    %h2 Change your password
    = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, inline_errors: false) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token
      = f.password_field :password, autofocus: true, autocomplete: "off", label: "New password", prepend: "<i class='fa fa-lock'></i>".html_safe
      = f.password_field :password_confirmation, autocomplete: "off", label: "Confirm new password", prepend: "<i class='fa fa-lock'></i>".html_safe
      = f.submit "Change my password", :class => 'btn bg-navy'
