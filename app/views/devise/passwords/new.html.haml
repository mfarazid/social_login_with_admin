.row.well
  .col-lg-6
    %h2 Forgot your password?
    = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, inline_errors: false) do |f|
      = devise_error_messages!
      = f.email_field :email, autofocus: true, prepend: "<i class='fa fa-envelope-o'></i>".html_safe, required: true
      = f.submit "Send me reset password instructions", :class => 'btn bg-navy'
